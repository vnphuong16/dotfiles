{
	"editor.fontFamily": "'Menlo', 'JetBrains Mono', 'JetBrainsMono Nerd Font', 'Comic Code'",
	//"editor.fontLigatures": true,
	"editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09', 'ss10', 'liga'",
	"editor.mouseWheelZoom": true,
	"editor.unicodeHighlight.nonBasicASCII": false,
	"redhat.telemetry.enabled": true,
	//"asciidoc.preview.asciidoctorAttributes": {
	//	"plantuml-server-url": "https://kroki.io"
	//},
	"editor.minimap.renderCharacters": false,
	"terminal.integrated.enableMultiLinePasteWarning": "auto",
	"terminal.integrated.defaultProfile.windows": "PowerShell",
	"workbench.colorCustomizations": {
		//"profileBadge.background": "#8F00FF",
		//"profileBadge.foreground": "#ffffff"
	},
	"files.autoGuessEncoding": true,
	"hediet.vscode-drawio.theme": "kennedy",
	"hediet.vscode-drawio.resizeImages": null,
	"files.autoSave": "afterDelay",
	"asciidoc.extensions.enableKroki": true,
	"editor.detectIndentation": false,
	"cmake.configureOnOpen": true,
	"workbench.startupEditor": "none",
	"security.workspace.trust.untrustedFiles": "open",
	"workbench.editor.empty.hint": "hidden",
	"explorer.confirmDelete": false,
	"jupyter.askForKernelRestart": false,
	"security.workspace.trust.enabled": false,
	"security.workspace.trust.emptyWindow": false,
	"C_Cpp.files.exclude": {
		"**/.vscode": true,
		"**/.vs": true
	},
	"workbench.settings.applyToAllProfiles": [
		"workbench.colorCustomizations",
		"vscode-pets.theme",
		"editor.fontFamily",
		"editor.tabSize",
		"editor.fontSize"
	],
	"explorer.compactFolders": false,
	"git.openRepositoryInParentFolders": "always",
	"workbench.editor.enablePreviewFromQuickOpen": true,
	"workbench.editor.enablePreview": false,
	"editor.insertSpaces": false,
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",
	"editor.guides.bracketPairsHorizontal": true,
	"terminal.integrated.suggest.enabled": true,
	"explorer.confirmDragAndDrop": false,
	"gitlens.ai.model": "gitkraken",
	"gitlens.ai.gitkraken.model": "gemini:gemini-2.0-flash",
	"debug.onTaskErrors": "showErrors",
	"editor.minimap.enabled": false,
	"editor.renderWhitespace": "all",
	"git.autofetch": true,
	"workbench.productIconTheme": "fluent-icons",
	"chat.disableAIFeatures": true,
	"editor.cursorBlinking": "phase",
	"editor.cursorSmoothCaretAnimation": "on",
	//"animations.Install-Method": "Custom UI Style",
	//"animations.Enabled": true,
	"editor.unicodeHighlight.invisibleCharacters": false,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.fontWeight": "bold",
	"vscode-pets.throwBallWithMouse": true,
	"vscode-pets.petSize": "small",
	"python.analysis.completeFunctionParens": true,
	"editor.fontVariations": false,
	"editor.quickSuggestions": {
		"comments": "on",
		"strings": "inline"
	},
	"workbench.activityBar.location": "top",
	"workbench.sideBar.location": "right",
	"window.menuBarVisibility": "compact",
	"window.commandCenter": false,
	"workbench.colorTheme": "Catppuccin Latte",
	"workbench.iconTheme": "catppuccin-latte",
	"vscode-pets.theme": "forest",
	"settingsSync.ignoredSettings": [],
	"terminal.integrated.profiles.linux": {
		"zsh": {
			"path": "/bin/zsh",
			"args": [
				"-l",
				"-i"
			]
		}
	},
	"terminal.explorerKind": "external"
}
